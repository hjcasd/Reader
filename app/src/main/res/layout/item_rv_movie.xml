<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="100dp"
            android:layout_height="132dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="死侍"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover" />


        <TextView
            android:id="@+id/tv_director_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="导演："
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />


        <TextView
            android:id="@+id/tv_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="11111111"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_director_title"
            app:layout_constraintLeft_toRightOf="@id/tv_director_title" />

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="主演："
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_director_title"
            app:layout_constraintTop_toBottomOf="@id/tv_director_title" />

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="22222222222222222222222222222222222222222222"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tv_main_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_main_title" />


        <TextView
            android:id="@+id/tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="类型："
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_main_title"
            app:layout_constraintTop_toBottomOf="@id/tv_main" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="喜剧"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tv_type_title"
            app:layout_constraintTop_toTopOf="@id/tv_type_title" />

        <TextView
            android:id="@+id/tv_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="评分："
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_type_title"
            app:layout_constraintTop_toBottomOf="@id/tv_type_title" />


        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="7.5"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tv_score_title"
            app:layout_constraintTop_toTopOf="@id/tv_score_title" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>