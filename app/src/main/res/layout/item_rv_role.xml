<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_role_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_role_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="名字"
        android:textColor="@color/black_deep"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/iv_role_pic"
        app:layout_constraintTop_toTopOf="@id/iv_role_pic" />


    <TextView
        android:id="@+id/tv_role_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="导演"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_role_name"
        app:layout_constraintTop_toBottomOf="@id/tv_role_name" />

</android.support.constraint.ConstraintLayout>